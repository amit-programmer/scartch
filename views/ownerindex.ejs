<%- include('./partials/header') %>
<div class="w-full h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-purple-600">
    <div class="w-3/4 grid grid-cols-1 gap-8 p-10 bg-white/10 backdrop-blur-md rounded-lg shadow-2xl">
        <div class="p-8 bg-white rounded-lg shadow-md transition transform hover:scale-105">
            <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
            <form action="/owners/ownerregister" method="post">
                <input class="input-field" type="text" placeholder="Full Name" name="fullname">
                <input class="input-field" type="email" placeholder="Email" name="email">
                <input class="input-field" type="password" placeholder="Password" name="password">
                <input class="input-field" type="text" placeholder="ImageUrl" name="image">
                <input class="input-field" type="text" placeholder="GST Number" name="Gst">
                <button class="btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>

<style>
    /* Input Fields */
    .input-field {
        width: 100%;
        padding: 12px;
        margin-bottom: 10px;
        border: 2px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .input-field:focus {
        border-color: #4f46e5;
        outline: none;
        box-shadow: 0 0 10px rgba(79, 70, 229, 0.3);
    }

    /* Primary Button */
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #4f46e5;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(67, 56, 202, 0.3);
    }
</style>
