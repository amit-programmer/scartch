


    <%- include('./partials/header') %>
   

<div class="w-full min-h-screen flex flex-col items-center bg-gray-100 py-10">
    <!-- Owner Card -->
    <div class="w-full md:w-2/3 lg:w-1/2 bg-white rounded-2xl shadow-xl p-8 flex flex-col items-center relative transition-all duration-500 hover:shadow-2xl">
        <!-- Profile Picture -->
        <div class="relative w-32 h-32 bg-blue-600 text-white rounded-full flex items-center justify-center  font-bold shadow-md transition-all duration-500 hover:scale-105 overflow-hidden">
            <img src="<%= owner.image %>" alt="Profile Picture" class="w-full h-full object-cover">
        </div>

        <!-- Owner Details -->
        <div class="text-center mt-6">
            <h2 class="text-2xl font-bold text-gray-800"><%= owner.fullname %></h2>
            <p class="text-gray-500"><%= owner.email %></p>
            <p class="text-gray-500"><%= owner.Gst %></p>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 flex space-x-4">
            <a href="/edit-profile" class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg shadow-md transition-transform duration-300 transform hover:scale-110 hover:bg-blue-700">
                <i class="ri-edit-2-line"></i> Edit Profile
            </a>
            
            <a class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg shadow-md transition-transform duration-300 transform hover:scale-110 hover:bg-blue-700" href="/owners/ownerregister" class="text-xl text-gray-800 font-bold mb-2">Create Admin</a>
            <a class="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg shadow-md transition-transform duration-300 transform hover:scale-110 hover:bg-blue-700" href="/owners/admin" >Admin</a>
            <a href="/owners/ownerlogout" class="flex items-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg shadow-md transition-transform duration-300 transform hover:scale-110 hover:bg-red-600">
                <i class="ri-logout-circle-r-line"></i> Logout
            </a>
        </div>

        <!-- Social Media Links -->
        <div class="mt-6 flex space-x-4">
            <a href="#" class="text-gray-500 text-2xl transition-colors duration-300 hover:text-blue-600">
                <i class="ri-linkedin-box-line"></i>
            </a>
            <a href="#" class="text-gray-500 text-2xl transition-colors duration-300 hover:text-gray-900">
                <i class="ri-github-line"></i>
            </a>
            <a href="#" class="text-gray-500 text-2xl transition-colors duration-300 hover:text-blue-400">
                <i class="ri-twitter-line"></i>
            </a>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
