<%- include('./partials/header') %>

<div class="w-full min-h-screen px-6 md:px-20 py-10 md:py-16 flex flex-col items-center">
    <div class="w-full md:w-2/3 bg-white rounded-lg shadow-lg p-6 md:p-10">
        <h2 class="text-2xl font-bold mb-6 text-center">My Account</h2>

        <!-- ðŸ›‘ Flash Messages -->
        <% if (error.length) { %>
            <div class="bg-red-500 text-white p-3 rounded-md mb-4 text-center"><%= error %></div>
        <% } %>
        <% if (success.length) { %>
            <div class="bg-green-500 text-white p-3 rounded-md mb-4 text-center"><%= success %></div>
        <% } %>

        <!-- ðŸ‘¤ Profile Section -->
        <div class="flex flex-col items-center">
            <!-- Profile Image -->
            <div class="w-20 h-20 flex items-center justify-center bg-blue-500 text-white text-3xl font-bold rounded-full">
                <%= user.fullname.charAt(0).toUpperCase() %>
            </div>

            <!-- User Details -->
            <div class="mt-4 text-center">
                <h3 class="text-xl font-semibold"><%= user.fullname %></h3>
                <p class="text-gray-600"><%= user.email %></p>
            </div>
        </div>

        <!-- ðŸ”„ Account Update Form -->
        <form action="/account/update" method="post" class="mt-6 space-y-4">
            <div>
                <label class="block font-medium text-gray-700">Full Name</label>
                <input type="text" name="fullname" value="<%= user.fullname %>" 
                       class="w-full p-2 border rounded-md shadow-sm focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block font-medium text-gray-700">Email</label>
                <input type="email" name="email" value="<%= user.email %>" 
                       class="w-full p-2 border rounded-md shadow-sm focus:ring-2 focus:ring-blue-500">
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 rounded-md shadow-md hover:bg-blue-700">
                Update Account
            </button>
        </form>
    </div>
</div>

<%- include('./partials/footer') %>
