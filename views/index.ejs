<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 shadow-md animate-pulse">
        <span class="inline-block mt-1 mb-1 text-white font-semibold">
            <%= error %>
        </span>
    </div>
<% } else if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 shadow-md animate-pulse">
        <span class="inline-block mt-1 mb-1 text-white font-semibold">
            <%= success %>
        </span>
    </div>
<% } %>



<div class="w-full h-screen flex items-center justify-center bg-gradient-to-r from-blue-500 to-purple-600">
    <div class="w-3/4 grid grid-cols-2 gap-8 p-10 bg-white/10 backdrop-blur-md rounded-lg shadow-2xl">
       

        <!-- Signup Section -->
        <div class="p-8 bg-white rounded-lg shadow-md transition transform hover:scale-105">
            <h3 class="text-4xl text-gray-800 font-bold mb-2">Welcome to <span class="text-blue-500">Scartch</span></h3>
            <h4 class="text-xl text-gray-600 mb-5">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input class="input-field" type="text" placeholder="Full Name" name="fullname">
                <input class="input-field" type="email" placeholder="Email" name="email">
                <input class="input-field" type="password" placeholder="Password" name="password">
                <button class="btn-primary">Create My Account</button>
            </form>
        </div>

        <!-- Login Section -->
        <div class="p-8 bg-white rounded-lg shadow-md transition transform hover:scale-105">
            <h4 class="text-2xl text-gray-800 font-bold mb-5">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input class="input-field" type="email" placeholder="Email" name="email">
                <input class="input-field" type="password" placeholder="Password" name="password">
                <button class="btn-primary">Login</button>
            </form>
        </div>

    </div>
</div>

<%- include('./partials/footer') %>

<style>
    /* Input Fields */
    .input-field {
        width: 100%;
        padding: 12px;
        margin-bottom: 10px;
        border: 2px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .input-field:focus {
        border-color: #4f46e5;
        outline: none;
        box-shadow: 0 0 10px rgba(79, 70, 229, 0.3);
    }

    /* Primary Button */
    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #4f46e5;
        color: white;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(67, 56, 202, 0.3);
    }
</style>
