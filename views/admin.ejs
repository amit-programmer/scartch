<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-6 md:px-20 py-10">
    <!-- Sidebar with slide-in animation -->
    <div class="w-full md:w-1/4 flex flex-col space-y-4 md:pr-10 transform transition-all duration-500 ease-in-out">
        <h2 class="text-xl font-bold flex items-center gap-2 text-blue-600">
            <i class="ri-store-3-line"></i> Manage Products
        </h2>
        <a class="flex items-center gap-3 px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 transition-transform transform hover:scale-105" href="">
            <i class="ri-list-check-2"></i> All Products
        </a>
        <a class="flex items-center gap-3 px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 transition-transform transform hover:scale-105" href="">
            <i class="ri-add-box-line"></i> Create New Product
        </a>
    </div>

    <!-- Main Product Section -->
    <div class="w-full md:w-3/4 flex flex-col">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold text-gray-800">Product List</h2>
            <a class="text-red-500 hover:underline flex items-center gap-2 transition-all duration-300 ease-in-out hover:text-red-700" href="">
                <i class="ri-delete-bin-6-line"></i> Delete All
            </a>
        </div>

        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% products.forEach((product) => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden relative transition-all duration-500 ease-in-out hover:scale-105 hover:shadow-xl">
                    <!-- Floating Add to Cart Button -->
                    <a class="absolute top-2 right-2 w-10 h-10 flex items-center justify-center rounded-full bg-blue-600 text-white opacity-0 transition-opacity duration-300 ease-in-out hover:bg-blue-700 hover:scale-110" href="">
                        <i class="ri-shopping-cart-2-line"></i>
                    </a>

                    <!-- Product Image -->
                    <div class="w-full h-52 bg-gray-100 flex items-center justify-center transition-all duration-300 hover:scale-110">
                        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                             alt="<%= product.name %>" class="w-full h-full object-cover">
                    </div>
                    
                    <!-- Product Details -->
                    <div class="p-4 flex justify-between items-center">
                        <div>
                            <h3 class="text-lg font-semibold"><%= product.name %></h3>
                            <h4 class="text-gray-500">â‚¹ <%= product.price %></h4>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
